@model IEnumerable<BP_Proyecto.Models.Client>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstSurname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SecondSurname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PersonType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Birthdate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstSurname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SecondSurname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PersonType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Birthdate)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.InsureId">Edit</a> |
                    <a asp-action="Details" class="btn btn-primary"  asp-route-id="@item.InsureId">Details</a> |
                    <a asp-action="Delete" class="btn btn-danger"  asp-route-id="@item.InsureId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
